generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  emailVerified DateTime?
  firstName    String
  lastName     String
  age          Int
  phone        String
  password     String?
  avatar       String?
  region       String?
  bio          String?
  role         String    @default("USER")
  verified     Boolean  @default(false)
  unreadSupportCount Int? @default(0)
  
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  courses       Course[]
  support       Support[]
  musicLikes  UserMusicLike[]
  playlists   Playlist[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("users")
}

model Post {
  id           String   @id @default(cuid())
  title        String
  content      String
  authorId     String
  ethnicGroupId String?
  images       String[]
  tags         String[]
  likes        Int      @default(0)
  
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments    Comment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  postId    String
  
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("comments")
}

model Course {
  id           String   @id @default(cuid())
  userId       String
  ethnicGroupId String
  ethnicGroupName String
  completed    Boolean  @default(false)
  score        Int      @default(0)
  answers      Json?
  certificateUrl String?
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  completedAt  DateTime?
  
  @@unique([userId, ethnicGroupId])
  @@map("courses")
}

model Support {
  id             String   @id @default(cuid())
  userId         String
  subject        String
  message        String
  answer         String?
  status         String   @default("pending")
  isReadByUser   Boolean  @default(false)
  isReadByAdmin  Boolean  @default(false)
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([isReadByUser])
}

model MusicTrack {
  id               String   @id @default(cuid())
  soundcloudId     String   @unique
  title            String
  artist           String
  artistId         String?
  artistAvatar     String?
  genre            String?
  duration         Int      // в миллисекундах
  tags             String[]
  description      String?
  permalinkUrl     String   // Ссылка на SoundCloud
  streamUrl        String?  // Ссылка для стриминга
  thumbnailUrl     String
  likesCount       Int      @default(0)
  playbackCount    Int      @default(0)
  
  // Лайки пользователей
  userLikes      UserMusicLike[]
  
  // Плейлисты
  playlistTracks PlaylistTrack[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([soundcloudId])
  @@index([artist])
  @@index([genre])
  @@index([createdAt])
  @@index([playbackCount])
  @@map("music_tracks")
}

model Playlist {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isPublic    Boolean  @default(true)
  imageUrl    String?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks      PlaylistTrack[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("playlists")
}

model PlaylistTrack {
  id          String   @id @default(cuid())
  playlistId  String
  musicTrackId String
  order       Int      // Порядок в плейлисте
  addedAt     DateTime @default(now())
  
  playlist    Playlist   @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  musicTrack  MusicTrack @relation(fields: [musicTrackId], references: [id], onDelete: Cascade)
  
  @@unique([playlistId, musicTrackId])
  @@map("playlist_tracks")
}

model UserMusicLike {
  id           String   @id @default(cuid())
  userId       String
  musicTrackId String
  
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  musicTrack   MusicTrack @relation(fields: [musicTrackId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  
  @@unique([userId, musicTrackId])
  @@map("user_music_likes")
}